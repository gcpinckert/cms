<!doctype html>
<html lang="en-US">
  <head>
    <title>CMS App</title>
    <meta charset="UTF-8">
  </head>
  <body>

    <% if session[:error] %>
      <p><%= session.delete(:error) %></p>
    <% end %>

    <% if session[:success] %>
      <p><%= session.delete(:success) %></p>
    <% end %>

    <%= yield %>
  </body>
</html>