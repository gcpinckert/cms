<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file%></a>
      <a href="/<%= file %>/edit">Edit</a>
      <form class="inline" action="/<%= file %>/delete" method="post">
        <button type="submit">Delete</button>
      </form>
      <form class="inline" action="/<%= file %>/duplicate" method="post">
        <button type="submit">Duplicate</button>
      </form>
    </li>
  <% end %>
</ul>

<a href="/new">New Document</a>

<% if session[:user_name] %>
  <form class="inline" action="/users/sign_out" method="post">
    <p><em>Signed in as <%= session[:user_name] %>.</em><p>
    <button type="submit">Sign Out</button>
  </form>
<% else %>
  <form action="/users/sign_in" method="get">
    <button type="submit">Sign In</button>
  </form>
  <form action="/users/sign_up" method="get">
    <button type="submit">Sign Up</button>
  </form>
<% end %>